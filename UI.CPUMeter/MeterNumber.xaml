<UserControl x:Class="MegaCpuMeter.MeterNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MegaCpuMeter"
             mc:Ignorable="d" Height="96" Width="96
             " Margin="0,0,0,0" Padding="2,2,2,2" >

    <Grid >
        <Image x:Name="imgHard" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="33" Source="imgs/cpu.png "/>

        <Label x:Name="lblPercentage" Height="24"  Content="0" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" Foreground="Black" FontSize="20" Padding="0,1,0,0" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Bottom" Margin="0,40,0,0" >

        </Label>
        <Label x:Name="lblSensorName" Content="Name" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" FontSize="10" Height="22"/>
        <TextBlock x:Name="lblHardware" TextWrapping="WrapWithOverflow" Text="Hardware" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="9" Margin="38,4,0,0" Height="26" Width="49"/>
        <Label  x:Name="lblUnit" Content="MHz" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom" FontSize="10"/>
    </Grid>
</UserControl>
