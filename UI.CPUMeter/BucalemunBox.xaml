<UserControl x:Class="MegaCpuMeter.BucalemunBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MegaCpuMeter"
                 mc:Ignorable="d" Height="96" Width="96"  BorderBrush="Black" BorderThickness="1,1,1,1">
    <Grid x:Name="mainGrid">
        <Grid.ContextMenu>
            <ContextMenu Name="cm"  StaysOpen="true">
                <MenuItem Header="Number Display" Click="MenuItem_Click"/>
                <MenuItem Header="Bar Display" Click="MenuItem_Click_1"/>
                <MenuItem Header="Graph Display" Click="MenuItem_Click_2"/>
                <MenuItem Header="Remove" Click="MenuItem_Click_3"/>


            </ContextMenu>
        </Grid.ContextMenu>

    </Grid>

</UserControl>
