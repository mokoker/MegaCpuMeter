<UserControl x:Class="MegaCpuMeter.MeterBars"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MegaCpuMeter"
             mc:Ignorable="d" Height="96" Width="96
             " Margin="0,0,0,0" Padding="2,2,2,2" >

    <Grid >
        <Rectangle x:Name="rctMain" Margin="10,1,10,1" Width="80" VerticalAlignment="Bottom" >

        </Rectangle>
        <Label x:Name="lblSensorName" Content="Name" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" FontSize="10" Height="22" FontFamily="Bahnschrift SemiBold Condensed"/>

        <Label x:Name="lblPercentage" Height="24"  Content="0" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" Foreground="Black" FontSize="20" Padding="0,1,0,0" RenderTransformOrigin="0.5,0.5" VerticalContentAlignment="Bottom" Margin="0,40,0,0" FontFamily="Bahnschrift SemiBold Condensed" >

        </Label>
        <Label  x:Name="lblUnit" Content="MHz" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Bottom" FontSize="10" FontFamily="Bahnschrift SemiBold Condensed"/>
    </Grid>
</UserControl>
